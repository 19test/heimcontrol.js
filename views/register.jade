extends layout

block content
  div.container
    h1 Register account
    include includes/messages
    div.row16
      form(action="/register", method="POST")
        p
          label(for="email") Email:
          input.login#email(type="email", name="email", placeholder="john.doe@example.com", required="1")
        p
          label(for="password") Password:
          input.login#password(type="password", name="password", required="1")
        p
          label(for="repeatpassword") Repeat password:
          input.login#repeatpassword(type="password", name="repeatpassword", required="1")
        br
        p
          input.btn.btn-success.btn-login(type="submit", value="Register")